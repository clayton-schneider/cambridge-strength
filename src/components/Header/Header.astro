---
// Import components
import { Icon } from "astro-icon";
import NavMenu from "./NavMenu";
const links = [
  { linkText: "Our Gym", link: "#about" },
  { linkText: "Pricing", link: "#pricing" },
  { linkText: "Testimonials", link: "#testimonials" },
  { linkText: "Gallery", link: "#gallery" },
  { linkText: "Contact", link: "#contact" },
];

interface Props {
  className?: string;
}
const { className } = Astro.props;
---

<header class={(className ? className : "") + " px-edge py-10 relative"}>
  <div
    class="max-w-screen-2xl mx-auto py-4 flex justify-between gap-5 xl:block"
  >
    <div class="flex items-center justify-between">
      <a href="/">
        <Icon
          name="logo"
          class="mx-auto lg:mx-0 fill-white w-[200px]"
          alt="Cambridge Strength logo"
        />
      </a>

      <NavMenu links={links} client:load />
    </div>
  </div>
</header>
