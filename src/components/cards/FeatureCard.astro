---
import { Image } from "@astrojs/image/components";
export interface Props {
  data: {
    title: string;
    text: string;
    img: {
      src: Promise<typeof import("*.png")>;
      alt: string;
    };
  };
}

const { data } = Astro.props;
---

<div class="max-w-[360px] w-full group bg-primary text-center text-text-dark">
  <div class="relative pb-[60%] w-full">
    <Image
      class="absolute left-0 top-0 w-full h-full grayscale group-hover:grayscale-0 object-cover"
      src={data.img.src}
      alt={data.img.alt}
    />
  </div>

  <div class="py-9 px-2">
    <p class="font-anton text-2xl uppercase">{data.title}</p>
    <p class="mt-2 text-lg">{data.text}</p>
  </div>
</div>
