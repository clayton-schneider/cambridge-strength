---
import Button from "@components/Button";

export interface Props {
  data: {
    title: string;
    price: {
      value: string;
      term: string;
    };
  };
}

const { data } = Astro.props;
---

<div
  class="max-w-[490px] w-full py-16 px-12 border text-center lg:text-left border-primary text-text-light hover:bg-primary hover:text-text-dark group"
>
  <p class="font-anton text-2xl">{data.title}</p>
  <p class="font-anton text-6xl mt-5">
    ${data.price.value}/<span class="text-2xl">{data.price.term}</span>
  </p>
  <Button className="mt-10 group-hover:!bg-black group-hover:!text-text-light">
    Join At CSC
  </Button>
</div>
